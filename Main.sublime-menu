[
    {
        "id": "preferences",
        "caption": "Preferences",
        "mnemonic": "n",
        "children": [
            {
                "id": "package-settings",
                "caption": "Package Settings",
                "mnemonic": "P",
                "children": [
                    {
                        "caption": "TextMarker Settings",
                        "command": "edit_settings",
                        "args": {
                            "base_file": "${packages}/TextMarker/TextMarker.sublime-settings",
                            "default": "/*\n\tTextMarker user settings in here override the default\n*/\n{\n\t\"user\": {\n\t\t$0\n\t}\n}\n"
                        }
                    }
                ]
            }
        ]
    },
    {
        "id": "tools",
        "children":
        [
            {
                "caption": "Text Marker",
                "children":
                [
                    {
                        "caption": "Text Marker",
                        "command": "text_marker",
                        "mnemonic": "C",
                        "checkbox": true
                    },
                    {
                        "caption": "Restore color scheme",
                        "command": "text_marker_restore",
                        "mnemonic": "S"
                    },
                    {
                        "caption": "Reset Text Marker",
                        "command": "text_marker_reset",
                        "mnemonic": "R"
                    }
                ]
            }
        ]
    }
]
